<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="citizen.Views.ReportPage"  Title="Signalement">
    <ScrollView>
        <StackLayout Spacing="10" Padding="10">
            
            <Label Text="Sujet" />
            <Entry x:Name="Title" Placeholder="Title" />
            <Label Text="Description" />
            <Editor x:Name="Description" AutoSize="TextChanges"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="takePhoto" Text="Prendre une photo"/>
                <Button x:Name="pickPhoto" Text="Album photo"/>
            </StackLayout>
            <Button x:Name="send" Text="Send Report" HorizontalOptions="Center"/>
            <Image x:Name="image"/>
            
        </StackLayout>
    </ScrollView>
</ContentPage>